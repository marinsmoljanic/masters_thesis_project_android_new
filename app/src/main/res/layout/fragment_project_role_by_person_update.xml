<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectRoleByPersonUpdateFragment">


<TextView
    android:id="@+id/Naslov"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Unos podataka osobe"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/PrezimeUnos" />

<EditText
    android:id="@+id/PrezimeUnos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"

    android:hint="Prezime"
    app:layout_constraintTop_toBottomOf="@id/Naslov"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/ImeUnos" />


<EditText
    android:id="@+id/ImeUnos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"

    android:hint="Ime"
    app:layout_constraintTop_toBottomOf="@id/PrezimeUnos"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/OIBUnos"/>


<EditText
    android:id="@+id/OIBUnos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"

    android:hint="OIB"
    app:layout_constraintTop_toBottomOf="@id/ImeUnos"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/PohraniGumb" />


<Button
    android:id="@+id/PohraniGumb"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center"

    android:background="@android:color/holo_orange_dark"
    android:text="Pohrani"
    android:textColor="@android:color/white"


    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/PovratniGumb"/>

<Button
    android:id="@+id/PovratniGumb"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center"

    android:background="@android:color/holo_blue_light"
    android:text="Povratak"
    android:textColor="@android:color/white"

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>