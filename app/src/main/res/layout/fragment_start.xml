<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/Naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/navigation_panel"
        android:textSize="20sp"

        app:layout_constraintBottom_toTopOf="@id/persons_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/persons_button"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"
        android:text="@string/navigation_person_button"
        android:textSize="22sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Naslov"
        app:layout_constraintBottom_toTopOf="@id/projects_button"
        />

    <Button
        android:id="@+id/projects_button"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"
        android:text="@string/navigation_project_button"
        android:textSize="22sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/persons_button" />


    <Button
        android:id="@+id/roles_button"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"
        android:text="@string/navigation_role_button"
        android:textSize="22sp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/projects_button" />



</androidx.constraintlayout.widget.ConstraintLayout>